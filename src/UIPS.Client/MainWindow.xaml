<Window x:Class="UIPS.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UIPS - 水下图像处理系统" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource PrimaryTextBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="10,20,10,40">
                    <materialDesign:PackIcon Kind="Water" Width="40" Height="40" Foreground="{StaticResource SecondaryBrush}"/>
                    <TextBlock Text="UIPS" FontSize="30" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <RadioButton x:Name="DashboardTab"
                             Style="{StaticResource MaterialDesignTabRadioButtonVertical}"
                             Margin="0,5" Padding="15,12" IsChecked="True"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             Background="Transparent"
                             Checked="DashboardTab_Checked">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ImageMultiple" Margin="0,0,10,0" Width="20" Height="20"/>
                        <TextBlock Text="图库" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <!-- 管理员面板 (仅管理员可见) -->
                <RadioButton x:Name="AdminTab"
                             Style="{StaticResource MaterialDesignTabRadioButtonVertical}"
                             Margin="0,5" Padding="15,12"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             Background="Transparent"
                             Visibility="Collapsed"
                             Checked="AdminTab_Checked">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ShieldAccount" Margin="0,0,10,0" Width="20" Height="20"/>
                        <TextBlock Text="管理员" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="AccountCircle" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock x:Name="WelcomeText" Text="欢迎回来" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>

            <ContentControl x:Name="ContentArea" 
                            Grid.Row="1" Margin="0,20,0,0">
                <Border BorderBrush="{StaticResource SurfaceBrush}" BorderThickness="2" CornerRadius="10">
                    <TextBlock Text="正在初始化 Dashboard..." 
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Opacity="0.5" FontSize="20"/>
                </Border>
            </ContentControl>
        </Grid>
    </Grid>
</Window>