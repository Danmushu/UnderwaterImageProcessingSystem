<UserControl x:Class="UIPS.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:UIPS.Client.Core.ViewModels;assembly=UIPS.Client.Core"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewmodels:DashboardViewModel}"
             Background="{StaticResource MaterialDesignPaper}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="图片上传与管理" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" VerticalAlignment="Top" Padding="25" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="文件上传" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                               Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 materialDesign:HintAssist.Hint="选择的文件路径"
                                 Text="{Binding SelectedFilePath, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,8,0"/>

                        <Button Grid.Column="1"
                                Content="浏览"
                                Click="BrowseButton_Click" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"/>
                    </Grid>

                    <Button Content="Upload"
                            Command="{Binding UploadFileCommand}"
                            IsEnabled="{Binding IsUploading, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=false}"
                            Margin="0,20,0,10"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"/>

                    <ProgressBar Style="{StaticResource MaterialDesignLinearProgressBar}"
                                 IsIndeterminate="{Binding IsUploading}"
                                 Height="10"
                                 Visibility="{Binding IsUploading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Margin="0,5,0,5"/>

                    <TextBlock Text="{Binding UploadStatus}"
                               Foreground="{StaticResource MaterialDesignBody}"
                               Opacity="0.7" TextWrapping="Wrap" MinHeight="30"/>
                </StackPanel>
            </materialDesign:Card>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="已上传图片" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                               VerticalAlignment="Center"/>

                    <Button Command="{Binding LoadImagesCommand}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            ToolTip="刷新列表"
                            Margin="10,0,0,0">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                </StackPanel>

                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Images}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         HorizontalContentAlignment="Stretch">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="5" Width="160" Height="200" UniformCornerRadius="6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Image Source="{Binding PreviewUrl}" 
                                               Stretch="UniformToFill"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>

                                        <ToggleButton 
                                            Style="{StaticResource MaterialDesignActionToggleButton}"
                                            Width="32" Height="32"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            Margin="5"
                                            IsChecked="{Binding IsSelected, Mode=OneWay}"
                                            Command="{Binding DataContext.ToggleSelectionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}">
                                            <ToggleButton.Content>
                                                <materialDesign:PackIcon Kind="HeartOutline" Foreground="White" Width="20" Height="20"/>
                                            </ToggleButton.Content>
                                            <materialDesign:ToggleButtonAssist.OnContent>
                                                <materialDesign:PackIcon Kind="Heart" Foreground="Red" Width="20" Height="20"/>
                                            </materialDesign:ToggleButtonAssist.OnContent>
                                        </ToggleButton>

                                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                            Width="30" Height="30"
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Top"
                                            Margin="5"
                                            Background="#99000000" 
                                            BorderBrush="Transparent"
                                            Foreground="White"
                                            ToolTip="删除图片 (仅管理员)"
                                            Cursor="Hand"
                                            Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource InverseBooleanConverter}}"
                                            Command="{Binding DataContext.DeleteImageCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}">

                                        <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                    </Button>
                                    </Grid>

                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding OriginalFileName}" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding OriginalFileName}"
                                               FontSize="12"
                                               Padding="5"/>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Grid.Row="1" 
                           Text="暂无图片，请点击刷新或上传新图片"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           Visibility="{Binding Images.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>