<UserControl x:Class="UIPS.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:UIPS.Client.ViewModels;assembly=UIPS.Client"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewmodels:DashboardViewModel}"
             Background="{StaticResource MaterialDesignPaper}">
    
    <Grid>
        <!-- 主内容区域 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Grid.Row="0" Text="图片上传与管理" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                       Margin="0,0,0,20"/>

            <!-- 上传区域 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：上传卡片 -->
                <materialDesign:Card Grid.Column="0" VerticalAlignment="Top" Padding="20" Margin="0,0,15,15">
                    <StackPanel>
                        <TextBlock Text="文件上传" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                                   Margin="0,0,0,12"/>

                        <!-- 单文件上传 -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     materialDesign:HintAssist.Hint="选择的文件路径"
                                     Text="{Binding SelectedFilePath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,8,0"
                                     FontSize="12"/>

                            <Button Grid.Column="1"
                                    Content="浏览"
                                    Click="BrowseButton_Click" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    Padding="12,6"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                            <Button Content="上传"
                                    Command="{Binding UploadFileCommand}"
                                    IsEnabled="{Binding IsUploading, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=false}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    Padding="16,6"
                                    Margin="0,0,8,0"/>

                            <Button Content="批量上传"
                                    Command="{Binding UploadMultipleFilesCommand}"
                                    IsEnabled="{Binding IsUploading, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=false}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    Padding="16,6"
                                    ToolTip="选择多个文件同时上传"/>
                        </StackPanel>

                        <ProgressBar Style="{StaticResource MaterialDesignLinearProgressBar}"
                                     IsIndeterminate="{Binding IsUploading}"
                                     Height="6"
                                     Visibility="{Binding IsUploading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Margin="0,4,0,4"/>

                        <TextBlock Text="{Binding UploadStatus}"
                                   Foreground="{StaticResource MaterialDesignBody}"
                                   Opacity="0.7" TextWrapping="Wrap" 
                                   FontSize="12"
                                   MinHeight="20"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 右侧：文件名筛选卡片 -->
                <materialDesign:Card Grid.Column="1" VerticalAlignment="Top" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="加载文件名"
                                Command="{Binding LoadFileNameGroupsCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Padding="12,6"
                                Margin="0,0,12,0"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding FileNameGroups}"
                                  SelectedItem="{Binding SelectedFileName}"
                                  materialDesign:HintAssist.Hint="选择文件名筛选"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectionChanged="FileNameComboBox_SelectionChanged"
                                  FontSize="13">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="4"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding FileNameGroups.Count, StringFormat='共 {0} 个'}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   Foreground="Gray"
                                   FontSize="12"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- 图片显示区域 -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}">
                        <Run Text="当前显示: "/>
                        <Run Text="{Binding SelectedFileName, Mode=OneWay, FallbackValue='所有图片'}" 
                            FontWeight="Bold"
                            Foreground="{StaticResource MaterialDesign.Brush.Primary}"/>
                    </TextBlock>

                    <Button Command="{Binding LoadImagesCommand}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            ToolTip="刷新列表（显示所有图片）"
                            Margin="10,0,0,0">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                </StackPanel>

                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Images}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         HorizontalContentAlignment="Stretch"
                         Background="Transparent"
                         BorderThickness="0">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="8" Width="220" Height="260" UniformCornerRadius="8"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 图片区域 -->
                                    <Grid Grid.Row="0">
                                        <!-- 背景图片 -->
                                        <Border ClipToBounds="True" CornerRadius="8,8,0,0">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding PreviewUrl}" 
                                                            Stretch="UniformToFill"
                                                            RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 整个图片区域的点击层 -->
                                        <Border Background="Transparent" Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                              Command="{Binding DataContext.PreviewImageCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                        </Border>

                                        <!-- 收藏按钮 -->
                                        <ToggleButton 
                                            Style="{StaticResource MaterialDesignActionToggleButton}" 
                                            Width="36" Height="36" 
                                            HorizontalAlignment="Left" VerticalAlignment="Top" 
                                            Margin="8" 
                                            IsChecked="{Binding IsSelected, Mode=OneWay}" 
                                            Command="{Binding DataContext.ToggleSelectionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                            CommandParameter="{Binding}"> 
                                            <ToggleButton.Content> 
                                                <materialDesign:PackIcon Kind="HeartOutline" Foreground="White" Width="22" Height="22"/> 
                                            </ToggleButton.Content> 
                                            <materialDesign:ToggleButtonAssist.OnContent> 
                                                <materialDesign:PackIcon Kind="Heart" Foreground="Red" Width="22" Height="22"/> 
                                            </materialDesign:ToggleButtonAssist.OnContent> 
                                        </ToggleButton>

                                        <!-- 删除按钮（所有用户都可以删除自己的图片） -->
                                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                            Width="34" Height="34"
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Top"
                                            Margin="8"
                                            Background="#99000000" 
                                            BorderBrush="Transparent"
                                            Foreground="White"
                                            ToolTip="删除图片"
                                            Cursor="Hand"
                                            Command="{Binding DataContext.DeleteImageCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Delete" Width="20" Height="20"/>
                                        </Button>
                                    </Grid>

                                    <!-- 文件名 -->
                                    <Border Grid.Row="1" Background="{StaticResource MaterialDesignCardBackground}">
                                        <TextBlock Text="{Binding OriginalFileName}" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding OriginalFileName}"
                                                   FontSize="13"
                                                   Padding="8,0"/>
                                    </Border>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Grid.Row="1" 
                           Text="暂无图片，请选择文件名或点击刷新"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           Visibility="{Binding Images.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>

                <!-- 分页控件 -->
                <materialDesign:Card Grid.Row="2" Padding="15" Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Command="{Binding GoToPreviousPageCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChevronLeft" VerticalAlignment="Center"/>
                                <TextBlock Text="上一页" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Grid.Column="1" 
                                   Text="{Binding PageInfo}" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="14"/>

                        <Button Grid.Column="2"
                                Command="{Binding GoToNextPageCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="下一页" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <materialDesign:PackIcon Kind="ChevronRight" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
        
        <!-- 图片预览弹窗 -->
        <Grid Visibility="{Binding IsPreviewOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="#CC000000">
            <Grid.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding ClosePreviewCommand}"/>
            </Grid.InputBindings>
            
            <!-- 关闭按钮 -->
            <Button Style="{StaticResource MaterialDesignIconButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="20"
                    Foreground="White"
                    Command="{Binding ClosePreviewCommand}"
                    ToolTip="关闭预览 (点击任意位置也可关闭)">
                <materialDesign:PackIcon Kind="Close" Width="32" Height="32"/>
            </Button>
            
            <!-- 预览图片 -->
            <Image Source="{Binding PreviewImageUrl}"
                   Stretch="Uniform"
                   MaxWidth="900"
                   MaxHeight="700"
                   Margin="50"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>
    </Grid>
</UserControl>
