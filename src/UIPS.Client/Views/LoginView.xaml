<Window x:Class="UIPS.Client.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UIPS Login" Height="550" Width="800" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize" WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <materialDesign:Card Width="350" Padding="20" UniformCornerRadius="10" Background="{StaticResource SurfaceBrush}" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="{Binding ActionTitle}" 
                           Foreground="{StaticResource PrimaryTextBrush}"
                           FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Username"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Foreground="{StaticResource PrimaryTextBrush}"
                         Margin="0,10"/>

                <!-- 密码输入区域（带显示/隐藏切换） -->
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 密码框（隐藏模式） -->
                    <PasswordBox x:Name="PasswordBox"
                                 materialDesign:HintAssist.Hint="Password"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Foreground="{StaticResource PrimaryTextBrush}"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Visibility="{Binding ShowPassword, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    
                    <!-- 密码框（明文模式） -->
                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Password"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             Visibility="{Binding ShowPassword, Converter={StaticResource BoolToVis}}"/>
                    
                    <!-- 显示/隐藏切换按钮 -->
                    <Button Grid.Column="1" 
                            Command="{Binding TogglePasswordVisibilityCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            VerticalAlignment="Bottom"
                            Width="30" Height="30" Padding="0">
                        <materialDesign:PackIcon Width="20" Height="20">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Setter Property="Kind" Value="Eye"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowPassword}" Value="True">
                                            <Setter Property="Kind" Value="EyeOff"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>
                    </Button>
                </Grid>

                <!-- 确认密码区域（注册模式，带显示/隐藏切换） -->
                <Grid Margin="0,10,0,20" Visibility="{Binding IsRegisterMode, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 确认密码框（隐藏模式） -->
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 materialDesign:HintAssist.Hint="Confirm Password"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Foreground="{StaticResource PrimaryTextBrush}"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                 Visibility="{Binding ShowPassword, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    
                    <!-- 确认密码框（明文模式） -->
                    <TextBox Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Confirm Password"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Foreground="{StaticResource PrimaryTextBrush}"
                             Visibility="{Binding ShowPassword, Converter={StaticResource BoolToVis}}"/>
                    
                    <!-- 占位，保持对齐 -->
                    <Border Grid.Column="1" Width="30"/>
                </Grid>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource ErrorBrush}"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Button Command="{Binding ExecuteAuthCommand}"
                        Content="{Binding ActionButtonText}"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="{StaticResource PrimaryBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="{Binding SwitchModePrompt}" 
                               Foreground="Gray" 
                               VerticalAlignment="Center" Margin="0,0,5,0"/>

                    <Button Command="{Binding SwitchModeCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Height="Auto" Padding="5,0"
                            Foreground="{StaticResource SecondaryBrush}">
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="去注册"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRegisterMode}" Value="True">
                                            <Setter Property="Text" Value="去登录"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>
                </StackPanel>

                <Button Content="EXIT" Click="Exit_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="{StaticResource ErrorBrush}"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>